<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaVert1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaVert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaVert3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaVert4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaVert5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaHorz7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaHorz2"
        app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
        app:layout_constraintStart_toStartOf="@+id/lineaVert1"
        app:layout_constraintTop_toTopOf="@+id/lineaHorz1" />

        <Button
            android:id="@+id/bAC"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/colorboton"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz3"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert2"
            app:layout_constraintStart_toStartOf="@+id/lineaVert1"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz2" />

        <Button
            android:id="@+id/numero7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz4"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert2"
            app:layout_constraintStart_toStartOf="@+id/lineaVert1"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz3" />

        <Button
            android:id="@+id/numero4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz5"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert2"
            app:layout_constraintStart_toStartOf="@+id/lineaVert1"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz4" />

        <Button
            android:id="@+id/numero1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz6"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert2"
            app:layout_constraintStart_toStartOf="@+id/lineaVert1"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz5" />

        <Button
            android:id="@+id/numero0"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingRight="105dp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz7"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert3"
            app:layout_constraintStart_toStartOf="@+id/lineaVert1"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz6" />

        <Button
            android:id="@+id/quitarNumero"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/colorboton"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz3"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert3"
            app:layout_constraintStart_toStartOf="@+id/lineaVert2"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz2" />

        <Button
            android:id="@+id/numero8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz4"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert3"
            app:layout_constraintStart_toStartOf="@+id/lineaVert2"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz3" />

        <Button
            android:id="@+id/numero5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz5"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert3"
            app:layout_constraintStart_toStartOf="@+id/lineaVert2"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz4" />

        <Button
            android:id="@+id/numero2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz6"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert3"
            app:layout_constraintStart_toStartOf="@+id/lineaVert2"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz5" />

        <Button
            android:id="@+id/porcentaje"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/colorboton"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz3"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert4"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/lineaVert3"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz2"/>

        <Button
            android:id="@+id/numero9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz4"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert4"
            app:layout_constraintStart_toStartOf="@+id/lineaVert3"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz3"/>

        <Button
            android:id="@+id/numero6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz5"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert4"
            app:layout_constraintStart_toStartOf="@+id/lineaVert3"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz4"/>

        <Button
            android:id="@+id/numero3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz6"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert4"
            app:layout_constraintStart_toStartOf="@+id/lineaVert3"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz5"/>

        <Button
            android:id="@+id/coma"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/color_boton_negro"
            android:text=","
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz7"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert4"
            app:layout_constraintStart_toStartOf="@+id/lineaVert3"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz6"/>

        <Button
            android:id="@+id/division"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_boton_naranja"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz3"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/lineaVert4"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz2"/>

        <Button
            android:id="@+id/multi"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_boton_naranja"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz4"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
            app:layout_constraintStart_toStartOf="@+id/lineaVert4"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz3"
            />

        <Button
            android:id="@+id/resta"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_boton_naranja"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz5"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
            app:layout_constraintStart_toStartOf="@+id/lineaVert4"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz4"
            />

        <Button
            android:id="@+id/suma"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_boton_naranja"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz6"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
            app:layout_constraintStart_toStartOf="@+id/lineaVert4"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz5"
            />

        <Button
            android:id="@+id/igual"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/color_boton_naranja"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/lineaHorz7"
            app:layout_constraintEnd_toStartOf="@+id/lineaVert5"
            app:layout_constraintStart_toStartOf="@+id/lineaVert4"
            app:layout_constraintTop_toTopOf="@+id/lineaHorz6"
            />

</androidx.constraintlayout.widget.ConstraintLayout>